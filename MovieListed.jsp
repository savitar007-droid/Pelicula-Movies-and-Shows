<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Movie Slideshow</title>
  <link rel="stylesheet" href="moviesStyle.css" />
</head>
<body>

  <div class="hero-banner">
    <div class="background-slideshow"></div>
    <div class="overlay"></div>

    <div class="movie-info">
      <h1 id="movie-title" class="movie-title"></h1>
      <p id="movie-languages" class="languages"></p>
      <p id="movie-description" class="description"></p>
      <button class="watch-button">Watch Now</button>
      <!-- Small persistent image -->
      <img src="movie5.jpeg" alt="Anyone" class="persistent-image" />
    </div>
  </div>

  <script src="slideshow.js"></script>
</body>
</html>
